.container {
  background-color: #f7f7f7;
}
.container .note-container {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding-top: 32rpx;
}
.container .note-container .btn-container {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-top: 280rpx;
}
.container .note-container .btn-container .btn {
  width: 690rpx;
  height: 88rpx;
  background-color: #f96d3d;
  border-radius: 10rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ffffff;
}
.container .note-container .nomore-tip {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: auto;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 34rpx;
  margin: 46rpx 0rpx;
}
.container .note-container .tip-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 30rpx 14rpx 32rpx;
}
.container .note-container .tip-container .tips {
  width: 260rpx;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #b8b8b8;
  line-height: 28rpx;
}
.container .note-container .tip-container .create-book {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: auto;
  height: 40rpx;
  color: #f96d3d;
}
.container .note-container .tip-container .create-book .plus {
  width: 28px;
  height: 40rpx;
  color: #f96d3d;
  display: inline-block;
}
.container .note-container .tip-container .create-book .create-notebook {
  width: auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: STSongti-SC-Regular, STSongti-SC;
  font-weight: 400;
  color: #f96d3d;
  line-height: 40rpx;
  display: inline-block;
  margin-left: 24rpx;
}
.container .note-container .tip-container .text-oranges {
  color: #F96D3D;
}
.container .note-container .book-list {
  width: 100%;
  height: 128rpx;
  background: #ffffff;
  box-shadow: 0rpx -2rpx 0rpx 0rpx #e2e2e2;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 28rpx 32rpx 32rpx;
}
.container .note-container .book-list .book-info {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .note-container .book-list .book-info .book-title {
  width: 64rpx;
  height: 64rpx;
  background-color: #9ba7b1;
  border-radius: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.container .note-container .book-list .book-info .book-title .title {
  width: auto;
  height: 48rpx;
  font-size: 34rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #ffffff;
  line-height: 48rpx;
}
.container .note-container .book-list .book-info .notebook-detail {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: auto;
  height: auto;
  margin-left: 32rpx;
}
.container .note-container .book-list .book-info .notebook-detail .notebook-name {
  width: auto;
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #0b0c0d;
  line-height: 40rpx;
}
.container .note-container .book-list .book-info .notebook-detail .notebook-resume {
  width: auto;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
  line-height: 28rpx;
}
.container .note-container .book-list .record {
  width: auto;
  height: 28rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  font-weight: 400;
  color: #969696;
  line-height: 28rpx;
}
